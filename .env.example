# ============================================
# SUCCESS SPROUT - MERN STACK CONFIGURATION
# ============================================

# MongoDB Configuration (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/success-sprout
# OR for local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/success-sprout

# JWT Configuration (Required)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Server Configuration
PORT=3000
BIND_HOST=0.0.0.0
NODE_ENV=development

# PayPal Configuration (Optional - for payment processing)
# Get these from https://developer.paypal.com
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Admin Configuration (Optional)
ADMIN_EMAIL=admin@successsprout.com
ADMIN_PASSWORD=change_this_admin_password_in_production
